{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CIVIC_TRACE_DATA_MODEL",
  "type": "object",
  "properties": {
    "location": {
      "description": "Geographic identification of the data scope",
      "type": "object",
      "properties": {
        "state": {
          "type": "string"
        },
        "county": {
          "type": "string"
        }
      },
      "required": ["state", "county"]
    },
    "decision_chain_nodes": {
      "description": "List of key individuals or agencies in the local child welfare system",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "agency": {
            "type": "string"
          },
          "relationships": {
            "description": "Links to other nodes, e.g., 'reports_to', 'overseen_by'",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "relationship_type": {
                  "type": "string"
                },
                "target_node_name": {
                  "type": "string"
                }
              },
              "required": ["relationship_type", "target_node_name"]
            }
          },
          "red_flags": {
            "description": "List of potential risk factors or complaints",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "role"]
      }
    },
    "risk_indicators": {
      "description": "Aggregated risk metrics for the county or individual nodes",
      "type": "object",
      "properties": {
        "overall_score": {
          "type": "number"
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "metric_name": {
                "type": "string"
              },
              "value": {
                "type": "number"
              },
              "description": {
                "type": "string"
              }
            },
            "required": ["metric_name", "value"]
          }
        }
      }
    },
    "linked_documents": {
      "description": "List of relevant files, external links, or FOIA results",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "document_name": {
            "type": "string"
          },
          "document_url": {
            "type": "string"
          },
          "document_type": {
            "type": "string"
          },
          "upload_date": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["document_name", "document_url"]
      }
    },
    "audit_log": {
      "description": "Audit records of system actions or data updates",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "action": {
            "type": "string"
          },
          "user_identifier": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        },
        "required": ["timestamp", "action"]
      }
    }
  },
  "required": ["location", "decision_chain_nodes"]
}
