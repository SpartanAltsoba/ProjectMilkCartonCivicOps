{
  "stack": "Development Observability Stack",
  "version": "v1.0",
  "ci_cd_pipeline": [
    { "stage": "Linting", "tool": "SuperLinter", "on_failure": "Log linting failure" },
    { "stage": "Security Scan", "tool": "CodeQL", "on_failure": "Log security scan failure" },
    { "stage": "Unit Tests", "tool": "PyTest", "on_failure": "Log unit test failure" },
    { "stage": "Docker Build", "tool": "Docker", "on_failure": "Log build failure" },
    { "stage": "Integration Tests", "tool": "WireMock", "on_failure": "Log integration test failure" },
    { "stage": "Staging Deploy", "tool": "Helm", "on_failure": "Log staging failure" },
    { "stage": "UI Tests", "tool": "Cypress", "on_failure": "Log UI test failure" },
    {
      "stage": "Canary Flow",
      "tool": "Canary",
      "name": "Delaware Happy Path",
      "on_failure": "Log failure and rollback"
    },
    { "final": "Log successful deployment" }
  ],
  "metrics_collection": {
    "tool": "Prometheus",
    "source": "Canary",
    "metrics": [
      "agent_latency_seconds{agent=Recon}",
      "coverage_ratio",
      "retry_count",
      "violation_rate"
    ],
    "on_collection": "Log metrics collection"
  },
  "alerting_rules": {
    "tool": "Alertmanager",
    "rules": [
      {
        "condition": "retry_count{agent='Recon'} > 10 for 15m",
        "severity": "SEV-2",
        "actions": ["Trigger PagerDuty SEV-2", "Log SEV-2 alert"]
      },
      {
        "condition": "coverage_ratio < 0.9 for 30m",
        "severity": "SEV-3",
        "actions": ["Trigger SEV-3", "Log SEV-3 alert"]
      },
      {
        "condition": "Normal",
        "actions": ["Log normal status"]
      }
    ]
  },
  "distributed_tracing": {
    "tool": "OpenTelemetry",
    "source": "Canary",
    "trace": "trace_id",
    "target": "UI render",
    "on_trace": "Log trace data"
  },
  "secrets_management": {
    "tool": "Vault",
    "requestor": "Workers",
    "auth_method": "AppRole",
    "on_success": "Log successful key retrieval"
  }
}
