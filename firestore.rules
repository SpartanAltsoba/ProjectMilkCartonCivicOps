rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Audit logs - only authenticated users can read, system can write
    match /audit_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Search history - users can manage their own search history
    match /search_history/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // FOIA requests - users can manage their own requests
    match /foia_requests/{requestId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Risk scores - read-only for authenticated users
    match /risk_scores/{scoreId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend can write risk scores
    }
    
    // Public data - read-only for all users
    match /public_data/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
