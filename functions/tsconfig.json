{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2018",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "functions/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "compileOnSave": true,
  "include": ["**/*.ts"],
  "exclude": ["lib"]
}
